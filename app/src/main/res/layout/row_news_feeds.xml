<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/lin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_news_feed"
                android:layout_width="@dimen/dimen_110"
                android:layout_height="@dimen/dimen_130"
                android:layout_marginRight="@dimen/dimen_5"
                android:background="@color/colorGrey"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_130"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_news_feed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold"
                    tools:text="News Feed Title" />

                <TextView
                    android:id="@+id/tv_news_feed_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_14"
                    tools:text="@string/strDummyText" />

                <TextView
                    android:id="@+id/tv_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/size_14"
                    tools:text="Times ago" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.2"
            android:background="@color/colorGrey" />
    </LinearLayout>
    <View
        android:layout_below="@+id/lin_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.2"
        android:background="@color/colorGrey" />
    <ImageView
        android:id="@+id/iv_nav_arrow"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_50"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:padding="@dimen/dimen_2"
        android:scaleType="fitXY"
        android:src="@drawable/ic_navigation"
        android:tint="@color/colorGrey"
        android:visibility="gone" />
</RelativeLayout>