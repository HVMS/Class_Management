<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_10"
    android:layout_height="wrap_content">

    <com.globalitians.employees.customviews.CustomTextView
        android:id="@+id/tv_installment_date"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:hint="Installment Date"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_dimen_14"
        app:font_type="medium" />

    <com.globalitians.employees.customviews.CustomEditText
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_toRightOf="@+id/tv_installment_date"
        android:id="@+id/edt_installment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_edittext_login"
        android:hint="Rs."
        android:maxLength="6"
        android:layout_toLeftOf="@+id/tv_delete_installment_date"
        android:padding="@dimen/dimen_10"
        android:textSize="@dimen/font_dimen_14" />

    <ImageView
        android:layout_centerVertical="true"
        android:tint="#000"
        android:id="@+id/tv_delete_installment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:hint="Installment Date"
        android:padding="@dimen/dimen_5"
        android:src="@drawable/ic_remove" />



</RelativeLayout>