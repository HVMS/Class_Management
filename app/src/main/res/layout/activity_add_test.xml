<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_student_background"
    android:orientation="vertical"
    tools:context="com.globalitians.employees.faculty.activities.AddNewFacultyActivity">

    <ScrollView
        android:id="@+id/sv_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_add_new_faculty"
        android:layout_margin="@dimen/dimen_10">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                app:cardCornerRadius="@dimen/dimen_8"
                app:cardElevation="@dimen/dimen_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_20">

                    <com.globalitians.employees.customviews.CustomTextView
                        android:id="@+id/tv_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:ellipsize="end"
                        android:hint="Username"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="@string/strTestDetails"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_size_20"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomTextView
                        style="@style/tv_input_title"
                        android:text="@string/strTestName"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_18"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomEditText
                        android:id="@+id/edt_test_name"
                        style="@style/edt_input"
                        android:background="@drawable/drawable_edittext_login"
                        android:hint="@string/strTestName"
                        android:textSize="@dimen/font_dimen_16"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomTextView
                        style="@style/tv_input_title"
                        android:text="@string/strTestDate"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_18"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomEditText
                        android:id="@+id/edt_test_date"
                        style="@style/edt_input"
                        android:focusable="false"
                        android:background="@drawable/drawable_edittext_login"
                        android:hint="@string/strTestDate"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_16"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomTextView
                        android:id="@+id/tv_test_time"
                        style="@style/tv_input_title"
                        android:text="@string/strTestTime"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_18"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomEditText
                        android:id="@+id/edt_test_time"
                        style="@style/edt_input"
                        android:focusable="false"
                        android:background="@drawable/drawable_edittext_login"
                        android:hint="@string/strTestTime"
                        android:textSize="@dimen/font_dimen_16"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomTextView
                        android:id="@+id/tv_total_marks"
                        style="@style/tv_input_title"
                        android:text="@string/strTotalMarks"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_18"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomEditText
                        android:id="@+id/edt_total_marks"
                        style="@style/edt_input"
                        android:background="@drawable/drawable_edittext_login"
                        android:hint="@string/strTotalMarks"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="@dimen/font_dimen_16"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomTextView
                        style="@style/tv_input_title"
                        android:layout_height="wrap_content"
                        android:text="@string/strPassingMarks"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_18"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomEditText
                        android:id="@+id/edt_passing_marks"
                        style="@style/edt_input"
                        android:maxLength="3"
                        android:inputType="number"
                        android:background="@drawable/drawable_edittext_login"
                        android:hint="@string/strPassingMarks"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_16"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomTextView
                        style="@style/tv_input_title"
                        android:layout_height="wrap_content"
                        android:text="@string/strSelectBatch"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_18"
                        app:font_type="medium" />

                    <com.globalitians.employees.customviews.CustomEditText
                        android:id="@+id/edt_batch_name"
                        style="@style/edt_input"
                        android:focusable="false"
                        android:background="@drawable/drawable_edittext_login"
                        android:hint="@string/strBatchName"
                        android:textColor="@color/colorTextDrawer"
                        android:textSize="@dimen/font_dimen_16"
                        app:font_type="medium" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.globalitians.employees.customviews.CustomButton
        android:id="@+id/btn_add_new_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@drawable/drawable_rounded_student"
        android:gravity="center"
        android:padding="@dimen/dimen_10"
        android:text="@string/strAddNew"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_18"
        app:font_type="medium" />
</RelativeLayout>
