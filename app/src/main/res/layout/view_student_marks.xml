<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:id="@+id/ll_main_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.globalitians.employees.customviews.CustomTextView
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:id="@+id/tv_student_name"
            app:font_type="regular"
            tools:text="Lalit Chaudhry"
            android:textSize="@dimen/font_dimen_16"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>

        <com.globalitians.employees.customviews.CustomTextView
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/tv_obtained_marks"
            app:font_type="regular"
            tools:text="98"
            android:textSize="@dimen/font_dimen_16"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>

        <com.globalitians.employees.customviews.CustomTextView
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:id="@+id/tv_test_status"
            app:font_type="regular"
            tools:text="Pass"
            android:textSize="@dimen/font_dimen_16"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_5"
        android:background="@color/grey_400"
        android:layout_below="@+id/ll_main_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"/>

</RelativeLayout>