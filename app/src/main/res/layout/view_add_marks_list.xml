<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:id="@+id/ll_main_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.globalitians.employees.customviews.CustomTextView
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:id="@+id/tv_student_name"
            app:font_type="regular"
            tools:text="Lalit Chaudhry"
            android:textSize="@dimen/font_dimen_16"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>

        <com.globalitians.employees.customviews.CustomTextView
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/tv_total_marks"
            android:layout_gravity="center_vertical"
            app:font_type="regular"
            tools:text="100"
            android:textSize="@dimen/font_dimen_16"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>

        <com.globalitians.employees.customviews.CustomEditText
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/dimen_2"
            android:paddingLeft="@dimen/dimen_2"
            android:paddingTop="@dimen/dimen_3"
            android:paddingBottom="@dimen/dimen_3"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:background="@drawable/drawable_edittext_login"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:id="@+id/edt_obtained_marks"
            app:font_type="regular"
            android:hint="00"
            android:textSize="@dimen/font_dimen_16"
            android:maxLength="3"
            android:inputType="number"
            android:layout_marginRight="@dimen/dimen_2"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>

        <!--status : absent, present-->
        <Switch
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:id="@+id/switch_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Switch>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_5"
        android:background="@color/grey_400"
        android:layout_below="@+id/ll_main_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"/>

</RelativeLayout>