<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_300"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_black">

            <com.globalitians.employees.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/size_12"
                android:text="Select Branch"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_18"
                app:font_type="medium" />

            <com.globalitians.employees.customviews.CustomTextView
                android:id="@+id/tvClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/size_12"
                android:text="X"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_18"
                app:font_type="medium" />


        </RelativeLayout>

        <com.globalitians.employees.customviews.CustomTextView
            android:id="@+id/tvOdhav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/size_15"
            android:text="Odhav"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_size_16"
            app:font_type="medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/colorBlack"></View>

        <com.globalitians.employees.customviews.CustomTextView
            android:id="@+id/tvVastral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/size_15"
            android:text="Vastral"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_size_16"
            app:font_type="medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/colorBlack"></View>

        <com.globalitians.employees.customviews.CustomTextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/size_15"
            android:text="Cancel"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_size_16"
            app:font_type="regular" />

    </LinearLayout>
</RelativeLayout>