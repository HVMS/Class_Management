<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/dimen_2"
        app:cardCornerRadius="@dimen/dimen_10"
        app:cardElevation="@dimen/dimen_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="#ffffff"
            android:layout_width="3dp"
            android:layout_height="match_parent"/>


        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rel_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_student_option"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                android:visibility="visible" />

            <RelativeLayout
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_student_option_center"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:tint="@color/colorWhite"
                    android:visibility="visible" />

                <com.globalitians.employees.customviews.CustomTextView
                    android:id="@+id/tv_student_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_student_option_center"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:gravity="bottom|center_horizontal"
                    android:maxLines="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_dimen_16"
                    app:font_type="bold"
                    android:layout_marginTop="@dimen/dimen_5"
                    tools:text="Student Option" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>